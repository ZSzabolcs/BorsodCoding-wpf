<Window x:Class="BorsodCoding_WPF_Admin.Database"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="Borsod Coding Admin App" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Menu>
            <MenuItem Header="_Műveletek">
                <MenuItem Header="Új rekord"
                          Click="button_UjRekord"/>
                <MenuItem Header="Kiválasztott elem módosítása"
                          x:Name="miModify"
                          IsEnabled="False"
                          Click="button_KivalasztottRekordModositas"/>
                <MenuItem Header="Kiválasztott elem törlése"
                          x:Name="miDelete"
                          IsEnabled="False"
                          Click="button_KivalasztottRekordTorlese"/>
                <MenuItem Header="Mégse"
                          x:Name="miMegse"
                          IsEnabled="False"
                          Click="btn_megse_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="tablak" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,61,0,0" Grid.Column="0" SelectionChanged="tablak_SelectionChanged"/>
        <Label Content="Táblák"  HorizontalAlignment="Left" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Grid.Column="0" Width="60"/>
        <DataGrid x:Name="tabla" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="True" Grid.Column="1" AutoGeneratingColumn="tabla_OszlopBeallitas" SelectionChanged="tabla_SelectionChanged"/>

    </Grid>
</Window>
