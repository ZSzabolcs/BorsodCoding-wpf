<Window x:Class="BorsodCoding_WPF_Admin.AddOrUpdateVelemeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="AddOrUpdateVelemeny" Height="450" Width="800">
    <Grid>
        <StackPanel Width="322">
            <Label x:Name="lbUserName" Content="Felhasználónév"/>
            <TextBox x:Name="tbxUserName"/>
            <Label Content="Értékelés"/>
            <ComboBox x:Name="cbxErtekeles"/>
            <Label Content="Megjegyzés"/>
            <TextBox x:Name="tbxMegjegyzes"/>
            <Button Margin="0 15 0 0" x:Name="bUpdateOrAdd" Content="" Click="bUpdateOrAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
