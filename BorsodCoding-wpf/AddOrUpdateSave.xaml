<Window x:Class="BorsodCoding_WPF_Admin.AddOrUpdateSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="AddOrUpdateSave" Height="450" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="320" >
            <Label x:Name="lbName" Content="Név"></Label>
            <TextBox x:Name="tbxName"></TextBox>
            <Label Content="Pontszám"></Label>
            <TextBox x:Name="tbxPoints"></TextBox>
            <Label Content="Szint"></Label>
            <TextBox x:Name="tbxLevel"></TextBox>
            <Label Content="Nyelv"></Label>
            <ComboBox x:Name="cbxLanguage"></ComboBox>
            <Button x:Name="bSave" Content="Új rekord hozzáadása" Margin="0 20" Click="Button_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
