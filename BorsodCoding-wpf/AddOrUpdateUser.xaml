<Window x:Class="BorsodCoding_WPF_Admin.AddOrUpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="AddOrUpdateUser" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="322">
            <Label x:Name="lbUserName" Content="Felhasználónév"/>
            <TextBox x:Name="tbxFelh"/>
            <Label Content="Jelszó"/>
            <TextBox x:Name="tbxPassw"/>
            <Label Content="Email cím"/>
            <TextBox x:Name="tbxEmail"/>
            <Button x:Name="bUjVagyMod" Content="" Margin="0 15 0 0" Click="bUjVagyMod_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
