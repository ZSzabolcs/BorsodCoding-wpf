<Window x:Class="BorsodCoding_WPF_Admin.AddOrUpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="AddOrUpdateUser" Height="450" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="320">
            <Label Content="Felhasználónév"/>
            <TextBox x:Name="tbxUsername"></TextBox>
            <Label Content="Jelszó"/>
            <TextBox x:Name="tbxPassword"></TextBox>
            <Label Content="Email"/>
            <TextBox x:Name="tbxEmail"></TextBox>
            <Button x:Name="bAction" Content="Új rekord hozzáadása" Margin="0 20" Click="bAction_Click"/>
        </StackPanel>

    </Grid>
</Window>
