        <DataGrid x:Name="tabla" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="True" Margin="153,0,254,0"/>
        <Label Content="Végzések" HorizontalAlignment="Left" Margin="685,13,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
