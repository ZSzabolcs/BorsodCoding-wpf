<Window x:Class="BorsodCoding_WPF_Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorsodCoding_WPF_Admin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,199,0,0"  Text="Username" VerticalAlignment="Top" Width="120" Height="20"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,238,0,0" Text="Password" VerticalAlignment="Top" Width="120" Height="20"/>
        <TextBox x:Name="Address" HorizontalAlignment="Center" Margin="0,159,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="120" Height="20"/>
        <Label Content="Borsod Coding Admin App" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" Width="643" FontSize="48" FontWeight="Bold" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
